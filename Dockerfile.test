FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install additional test dependencies
RUN pip install --no-cache-dir requests

# Copy application code
COPY . .

# Create test database directory with proper permissions
RUN mkdir -p /app/test_data && chmod 755 /app/test_data

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Run tests
CMD ["sh", "-c", "echo 'Running MCP functionality tests...' && python test_server.py && echo '' && echo 'Running HTTP integration tests...' && python test_http_integration.py"]